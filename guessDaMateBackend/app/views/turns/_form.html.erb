<%= form_with(model: turn) do |form| %>
  <% if turn.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(turn.errors.count, "error") %> prohibited this turn from being saved:</h2>

      <ul>
        <% turn.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :roundNum, style: "display: block" %>
    <%= form.number_field :roundNum %>
  </div>

  <div>
    <%= form.label :question, style: "display: block" %>
    <%= form.text_field :question %>
  </div>

  <div>
    <%= form.label :answer, style: "display: block" %>
    <%= form.text_field :answer %>
  </div>

  <div>
    <%= form.label :winning, style: "display: block" %>
    <%= form.check_box :winning %>
  </div>

  <div>
    <%= form.label :flippedCards, style: "display: block" %>
    <%= form.text_area :flippedCards %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
